# Función de Fibonacci usando memorización con un diccionario
def fibonacci(n, memo={}):
    # Verificar si el valor ya está calculado
    if n in memo:
        return memo[n]
    
    # Condiciones base
    if n == 0:
        memo[n] = 0
        return 0
    if n == 1:
        memo[n] = 1
        return 1
    
    # Calcular recursivamente y guardar en el diccionario
    memo[n] = fibonacci(n - 1, memo) + fibonacci(n - 2, memo)
    return memo[n]

# Ejemplo de uso
n = 10
print(f"El término {n} de la serie Fibonacci es: {fibonacci(n)}")
